<?xml version="1.0" encoding="utf-8"?>
<web-app
        version="2.5"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <!--<welcome-file-list>-->
        <!--<welcome-file>index.jsp</welcome-file>-->
    <!--</welcome-file-list>-->

    <listener>
        <listener-class>
            com.nimbits.server.api.ApiKeyInitializer
        </listener-class>
    </listener>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>
            com.nimbits.server.api.RegisterServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UnregisterServlet</servlet-name>
        <servlet-class>
            com.nimbits.server.api.UnregisterServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>UnregisterServlet</servlet-name>
        <url-pattern>/unregister</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SendAllMessagesServlet</servlet-name>
        <servlet-class>
            com.nimbits.server.api.SendAllMessagesServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>SendAllMessagesServlet</servlet-name>
        <url-pattern>/sendAll</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SendMessageServlet</servlet-name>
        <servlet-class>
            com.nimbits.server.api.SendMessageServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>SendMessageServlet</servlet-name>
        <url-pattern>/send</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>
            com.nimbits.server.api.HomeServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
</web-app>
